pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the Docker image...'
                    // Example build steps
                    sh 'docker build -t saba7794/my-web-app:0.1 .'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    // Example test steps (you may add your specific test commands)
                    sh 'docker run saba7794/my-web-app:0.1 npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the Docker image...'
                    // Example deployment steps (you may deploy to AWS, Docker Hub, etc.)
                    sh 'docker push saba7794/my-web-app:0.1'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
            // Example post-build success actions
            emailext subject: "Pipeline Succeeded: ${currentBuild.fullDisplayName}",
                      body: "The pipeline has succeeded.",
                      to: "your-team@example.com"
        }

        failure {
            echo 'Pipeline failed!'
            // Example post-build failure actions
            emailext subject: "Pipeline Failed: ${currentBuild.fullDisplayName}",
                      body: "The pipeline has failed. Please check the logs.",
                      to: "your-team@example.com"
        }
    }
}
