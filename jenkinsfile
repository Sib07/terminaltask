pipeline {
    agent any
    
    tools {
        maven 'MAVEN'
    }

    stages {
        stage('Build Maven') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'a3ce9c8d-1f26-4dbd-9fd7-e5c0ac5ae11d', url: 'https://github.com/Sib07/terminaltask.git']]])
                    // Add any Maven build commands if needed
                    sh 'mvn clean install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t saba7794/my-web-app:0.1 ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([string(credentialId: 'saba7794', variable: 'dockerhubpws')]) {
                        bat "docker login -u saba7794 -p ${dockerhubpws}"
                        bat "docker push saba7794/my-web-app:0.1"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Add your specific test commands
                    echo 'Testing the Docker image...'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Add deployment steps as needed
                    echo 'Deploying the Docker image...'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
            emailext subject: "Pipeline Succeeded: ${currentBuild.fullDisplayName}",
                      body: "The pipeline has succeeded.",
                      to: "snaz5894@gmail.com"
        }

        failure {
            echo 'Pipeline failed!'
            emailext subject: "Pipeline Failed: ${currentBuild.fullDisplayName}",
                      body: "The pipeline has failed. Please check the logs.",
                      to: "snaz5894@gmail.com"
        }
    }
}
